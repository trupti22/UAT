<form asp-action="UploadFiles" asp-controller="Home" method="post" enctype="multipart/form-data">



    <h1>File Upload </h1>
    <br />
    <input id="uploadInput" type="file" name="files" multiple />
    <br />
    <input id="kk" type="submit" value="Upload" />
    <br />
    <br /><br /><br />

    @model List<fileU>

    <table style="border:1px solid gray">
        <tr style="border:1px solid gray">
            <th style="padding:10px!important;border:1px solid gray">File Name</th>
            <th style="padding:10px!important;border:1px solid gray">File Link</th>
        </tr>
        <tr><td></td><td></td></tr>
        @foreach (var fileInfo in Model)
        {
            <tr>
                <td style="padding:10px!important;border:1px solid gray">
                    @fileInfo.Name
                </td>
                <td style="padding:10px!important;border:1px solid gray">
                    <a style="cursor:pointer" onclick="location.href='@Url.Action("download", "Home")?id=@fileInfo.ContentType'">@fileInfo.Name</a>
                </td>
            </tr>
        }
    </table>
</form>

